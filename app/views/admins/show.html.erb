<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style media="screen">
      .form-inline {
        border: 1px solid grey;
        border-radius: 5px;
        background-color: #d9d9db;
      }
    </style>
    <title>Admin Page</title>
  </head>
  <body>
    <div class="container">
      <%= link_to 'Admin management', management_admins_path, class: 'btn btn-info' %>
      <%= link_to 'Add a new admin', new_users_path, class: 'btn btn-info' %><br>

      <datalist id='types'>
        <option  value='Drawing'>
        <option  value='Painting'>
        <option  value='Printmaking'>
      </datalist><br>

      <form class="form-inline">
        <%= form_for @artpiece do |form| %>
        <div class="form-group">
          <%= form.label :title %>
          <%= form.text_field :title, required: 'true' %><br>
        </div>
        <div class="form-group">
          <%= form.label :type_of_art %>
          <%= form.text_field :type_of_art, list: 'types', required: 'true' %><br>
        </div>
        <div class="form-group">
          <%= form.label :image %>
          <%= form.file_field :image %>
        </div>
        <%= form.button :submit, value: 'Upload Art Piece', class:"btn btn-default" %>
        <% end %>
      </form>


      <div class='all_art'>
        <% @artTypes.each do |artType| %>

          <div class='artType'>
            <div class='artName'>
              <% if artType.size > 0 %>
              <%= artType.first.type_of_art %>
              <% end %>
            </div><br>

            <div class="col-lg-3 col-md-4 col-xs-6 thumb">
              <% artType.each do |artpiece| %>
              <div class='art'>
                <%= artpiece.title %><br>
                <%= image_tag artpiece.image.url(:thumb), class: 'image' %>
                <%= link_to 'delete', artpieces_path(id: artpiece.id), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }, class: 'button' %>
              </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>


    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
  </body>
</html>
