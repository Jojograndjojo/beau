<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>

    <table id='usersList'>
      <tr>
        <td>Username</td>
        <td>Last connection</td>
        <td>delete</td>
      </tr>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.username %></td>
          <td>last connection</td>
          <td><%= link_to 'x', users_path(id: user.id), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }, class: 'button'%></td>
        </tr>
      <% end %>
    </table>

    <div class='user_form'>
      <%= form_for :email, url: '/admins/send_invitation' do |form| %>
      <%= form.label :name %>
      <%= form.text_field :name %>
      <%= form.label :email %>
      <%= form.text_field :email %>
      <%= form.submit 'Send invitation' %>
      <% end %>
    </div>

  </body>
</html>
